# ============================================================
# SauceDemo BDD Framework - Environment Configuration
# ============================================================
# Copy this file to .env and update values as needed

# Application
BASE_URL=https://www.saucedemo.com

# Browser Settings
BROWSER=chromium          # Options: chromium, firefox, webkit
HEADLESS=true             # Options: true, false
SLOW_MO=0                 # Milliseconds to slow down actions (0 = disabled)
TIMEOUT=30000             # Default timeout in milliseconds

# Screenshots
SCREENSHOT_ON_FAILURE=true

# Database Configuration (for DB utility demonstration)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=saucedemo_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
